@using SRCONFI.Projeto.Domain.Entity
@model List<Socios>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

<style>
    <style > table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #337ab7;
        color: white;
    }
</style>


<table class="table table-hover" id="tableSocios">
    <thead>
        <tr>
            <th>Matrícula</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>E-mail</th>
            <th>Telefone</th>
            <th>Status</th>
    </thead>
    <tbody>

        @foreach (Socios socios in Model)
            {
            <tr class="clickable-row" data-row-id="@socios.socioID">
                <td>@socios.socioID</td>
                <td>@socios.nomeSocio</td>
                <td>@socios.Categoria.descricao</td>
                <td>@socios.emailsocio</td>
                <td>@socios.telefoneSocio</td>
                <td>
                    @if (socios.inStatus == 0)
                    { @Html.Raw("Inativo") }
                    else
                    { @Html.Raw("Ativo") }
                </td>
            </tr>
        }
    </tbody>
</table>