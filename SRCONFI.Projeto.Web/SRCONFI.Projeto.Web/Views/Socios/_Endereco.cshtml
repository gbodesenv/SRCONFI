    </div>

    <div class="col-xs-3">
        @Html.Label("Data Nascimento", new { @class = "col-sm-12 control-label-sm" })
        @Html.TextBoxFor(model => model.endereco, new { @class = "form-control input-sm", @placeholder = "Data de Nascimento", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Data Nascimento' é obrigatório" })
    </div>
    <div class="col-xs-2">
        @Html.Label("Data Nascimento", new { @class = "col-sm-12 control-label-sm" })
        @Html.TextBoxFor(model => model.numero, new { @class = "form-control input-sm", @placeholder = "Data de Nascimento", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Data Nascimento' é obrigatório" })
    </div>
</div>

