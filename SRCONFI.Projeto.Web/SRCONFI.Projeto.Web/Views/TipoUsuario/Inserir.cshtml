@model SRCONFI.Projeto.Domain.Entity.TipoUsuario
@using System.Web.Mvc;

<script src="~/Scripts/Views/TipoUsuario/Inserir.js"></script>

@Html.Hidden("hdnCaminhoInserirTipoUsuario", @Url.Action("Inserir", "TipoUsuario"))

@using (Html.BeginForm("Inserir", "TipoUsuario", FormMethod.Post, new { @class = "form-horizontal", @role = "form", id = "formInserirTipoUsuario" }))
{
    @Html.Hidden("tipoUsuarioID", 0)

    <div class="form-group">
        @Html.Label("Código", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-3">
            @Html.TextBox("codigo", "", new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Descrição", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.descricaoTipoUsuario, new { @class = "form-control", @placeholder = "Tipo de Usuário", @required = "required" })
        </div>
    </div>
    
}
