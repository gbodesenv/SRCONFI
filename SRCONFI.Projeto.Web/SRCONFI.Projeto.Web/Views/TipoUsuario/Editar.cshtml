@{
    Layout = null;
}

@model SRCONFI.Projeto.Domain.Entity.TipoUsuario
@using System.Collections.Generic;
@using System.Web.Mvc;

<script src="~/Scripts/Views/TipoUsuario/Editar.js"></script>

@Html.Hidden("hdnCaminhoSalvarEditarTipoUsuario", @Url.Action("Editar", "TipoUsuario"))

@using (Html.BeginForm("Editar", "TipoUsuario", FormMethod.Post, new { @class = "form-horizontal", @role = "form", id = "formEditarTipoUsuario" }))
{
    <div class="form-group">
        @Html.Label("Código", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.tipoUsuarioID, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Descrição", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.descricaoTipoUsuario,  new { @class = "form-control", @placeholder = "Descrição tipo usuário", @required = "required" })
        </div>
    </div>
    
}





