@using SRCONFI.Projeto.Domain.Entity
@model Pagamentos
@{
    ViewBag.Title = "Retificar Pagamento";
}


<script src="~/Scripts/Views/Pagamentos/Retificar.js"></script>

@*CABEÇALHO*@
<ol class="breadcrumb">

    <li>@Html.ActionLink("Home", "Home", "Home", null, null)</li>
    <li>Mensalidades</li>
    <li>@Html.ActionLink("Histórico de Pagamentos", "ConsultaPagamentos", "Pagamentos", null, null)</li>
    <li>Retificar Pagamento</li>

</ol>

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading clearfix">
        <span><strong>Retificar Pagamento</strong></span>
        <div class="btn-group pull-right">
            <button type="button" class="btn btn-primary" id="btnGravarRetificarPagamento">Gravar</button>
        </div>

    </div>
    <div class="row top10 left15 right15 bottom20">

        @Html.Hidden("hdnCaminhoEditarPagamentos", @Url.Action("Editar", "Pagamentos"))

        @using (Html.BeginForm("Editar", "Pagamentos", FormMethod.Post, new { @class = "form-horizontal", @role = "form", id = "formPagamentos" }))
        {
            @Html.HiddenFor(model => model.pagamentoID)
            @Html.HiddenFor(model => model.dataCanc)
            @Html.HiddenFor(model => model.inCancelado)
            @Html.HiddenFor(model => model.justificativaCanc)


            <div class="row top10">
                <div class="col-xs-4">
                    @Html.Label("Matrícula", new { @class = "col-sm-4 control-label-sm" })
                    @Html.TextBoxFor(model => model.socioID_FK, new { @class = "form-control input-sm", @readonly = "readonly" })
                </div>
                <div class="col-xs-8">
                    @Html.Label("Nome", new { @class = "col-sm-7 control-label-sm" })
                    @Html.TextBox("NomeSocio", Model.Socios.nomeSocio, new { @class = "form-control input-sm", @readonly = "readonly" })
                </div>
            </div>

            <div class="row top10">
                <div class="col-xs-4">
                    @Html.Label("Data", new { @class = "col-sm-4 control-label-sm" })
                    @Html.TextBoxFor(model => model.dataPag, new { @class = "form-control input-sm date-mask", @readonly = "readonly" })
                </div>
                <div class="col-xs-8">
                    @Html.Label("Comentário", new { @class = "col-sm-8 control-label-sm" })
                    @Html.TextBoxFor(model => model.comentarioPag, new { @class = "form-control input-sm", @readonly = "readonly" })
                </div>


            </div>

            <div class="row top10">
                <div class="col-xs-5">
                    @Html.Label("Data Retificação", new { @class = "col-sm-5 control-label-sm" })
                    @Html.TextBoxFor(model => model.dataRetificacao, new { @class = "form-control input-sm date-mask", @placeholder = "Data de Retificação", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Data de Retificação' é obrigatório" })
                </div>
                <div class="col-xs-2">
                    @Html.Label("Valor", new { @class = "col-sm-2 control-label-sm" })
                    @Html.TextBoxFor(model => model.valorPag, new { @class = "form-control input-sm numeric-places", @placeholder = "Valor", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Valor' é obrigatório" })
                </div>

                <div class="col-xs-5">
                    @Html.Label("Mês Ref", new { @class = "col-sm-4 control-label-sm" })
                    @Html.DropDownListFor(model => model.mesID_FK, (List<SelectListItem>)ViewBag.listMes, new { @class = "form-control", @placeholder = "Mês/Ano Referente", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Mês/Ano Referente' é obrigatório" })
                </div>
            </div>

            <div class="row top10">
                <div class="col-xs-12">
                    @Html.Label("Justificativa", new { @class = "col-sm-12 control-label-sm" })
                    @Html.TextBoxFor(model => model.justificativaRetificacao, new { @class = "form-control input-sm", @placeholder = "Justificativa", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Justificativa' é obrigatório" })
                </div>
            </div>

        }
    </div>




    @Html.Hidden("hdnInserirPagamento", @Url.Action("Inserir", "Pagamentos"))
    @Html.Hidden("hdnEditarPagamento", @Url.Action("Editar", "Pagamentos"))
    @Html.Hidden("hdnCaminhoEditarPagamentos", @Url.Action("Editar", "Pagamentos"))
    @Html.Hidden("hdnCaminhoModalPesquisarSocios", @Url.Action("ModalPesquisarSocios", "Pagamentos"))
    @Html.Hidden("hdnCaminhoPesquisarSocios", @Url.Action("_PesquisaSocios", "Pagamentos"))
    @Html.Hidden("hdnCaminhoBuscarSocio", @Url.Action("_Socio", "Pagamentos"))
