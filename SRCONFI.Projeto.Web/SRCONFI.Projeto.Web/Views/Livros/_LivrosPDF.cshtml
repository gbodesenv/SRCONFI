@using SRCONFI.Projeto.Domain.Entity
@model List<Livros>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

<style>
    <style > table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #337ab7;
        color: white;
    }
</style>

<table class="table table-hover" id="tableLivros">
    <thead>
        <tr>
            <th>Código</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Editora</th>
    </thead>
    <tbody>

        @foreach (Livros livros in Model)
            {
            <tr class="clickable-row" data-row-id="@livros.livroID">
                <td>@livros.livroID</td>
                <td>@livros.nomeAutor</td>
                <td>@livros.Autores.nomeAutor</td>
                <td>@livros.Editoras.nomeEditora</td>
            </tr>
        }
    </tbody>
</table>