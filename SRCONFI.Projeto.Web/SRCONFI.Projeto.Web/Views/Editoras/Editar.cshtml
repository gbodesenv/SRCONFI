@{
    Layout = null;
}

@model SRCONFI.Projeto.Domain.Entity.Editoras
@using System.Collections.Generic;
@using System.Web.Mvc;

<script src="~/Scripts/Views/Editoras/Editar.js"></script>

@Html.Hidden("hdnCaminhoSalvarEditarEditora", @Url.Action("Editar", "Editoras"))

@using (Html.BeginForm("Editar", "Editoras", FormMethod.Post, new { @class = "form-horizontal", @role = "form", id = "formEditarEditora" }))
{
    <div class="form-group">
        @Html.Label("Código", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.editoraID, new { @class = "form-control", @readonly = "readonly", required = "true" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nome", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.nomeEditora, new { @class = "form-control", @placeholder = "Nome", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Nome' é obrigatório" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Sigla", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.siglaEditora, new { @class = "form-control", @placeholder = "Login", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Sigla' é obrigatório" })
        </div>
    </div>

}
