@{
    Layout = null;
}

@model SRCONFI.Projeto.Domain.Entity.Usuario
@using System.Collections.Generic;
@using System.Web.Mvc;

<script src="~/Scripts/Views/Usuarios/Editar.js"></script>

@Html.Hidden("hdnCaminhoSalvarEditarUsuario", @Url.Action("Editar", "Usuario"))

@using (Html.BeginForm("Editar", "Usuario", FormMethod.Post, new { @class = "form-horizontal", @role = "form", id = "formEditarUsuario" }))
{
    <div class="form-group">
        @Html.Label("Código", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.usuarioID, new { @class = "form-control", @readonly = "readonly", required = "true" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Tipo Usuário", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.tipoUsuarioID_FK, (List<SelectListItem>)ViewBag.listTipoUsuario, new { @class = "form-control", @placeholder = "Tipo de Usuário", required = "true" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nome", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.nome, new { @class = "form-control", @placeholder = "Nome", required = "true" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Login", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.login, new { @class = "form-control", @placeholder = "Login", required = "true" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Senha", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.PasswordFor(model => model.senha, new { @class = "form-control", @placeholder = "Senha", required = "true" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("E-mail", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.email, new { @class = "form-control", @placeholder = "E-mail", required = "true" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Telefone", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.numeroTelefone, new { @class = "form-control", @placeholder = "Telefone" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Situação", new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.inStatus, (List<SelectListItem>)ViewBag.listSituacao, new { @class = "form-control", @placeholder = "Situação", required = "true" })
        </div>
    </div>
}





