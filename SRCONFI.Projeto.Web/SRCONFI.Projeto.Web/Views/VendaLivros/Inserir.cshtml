@model SRCONFI.Projeto.Domain.Entity.VendasLivros
@using System.Web.Mvc;


<script src="~/Scripts/Views/VendaLivros/Inserir.js"></script>



@Html.Hidden("hdnCaminhoInserirVendaLivros", @Url.Action("Inserir", "VendaLivros"))

@using (Html.BeginForm("Inserir", "VendaLivros", FormMethod.Post, new { @class = "form-horizontal", @role = "form", id = "formVendaLivros" }))
{
    <div id="Livro_Pesquisa">
        @Html.Partial("_Livro", new SRCONFI.Projeto.Domain.Entity.Livros())
    </div>

    <div class="row top10">
        <div class="col-xs-12">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tabVendaLivros">Informações de Venda</a></li>
            </ul>

            <div class="tab-content">
                <div id="tabVendaLivros" class="tab-pane fade in active">
                    @*<h3>Dados Complementares</h3>*@
                    <div class="top10 left10 right10 bottom20">
                        @Html.HiddenFor(model => model.vendaID)
                        <div class="row top5">
                            <div class="col-xs-6">
                                @Html.Label("Cod. Venda", new { @class = "col-sm-6 control-label-sm" })
                                @Html.TextBox("CodVenda","", new { @class = "form-control input-sm", @readonly = "readonly" })
                            </div>

                            <div class="col-xs-6">
                                @Html.Label("Data Venda", new { @class = "col-sm-3 control-label-sm" })
                                @Html.TextBoxFor(model => model.dataVenda, new { @class = "form-control input-sm mask-date", @placeholder = "Data Venda", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Data Venda' é obrigatório" })
                            </div>


                        </div>

                        <div class="row top5">
                            <div class="col-xs-6">
                                @Html.Label("Vlr. Unitário", new { @class = "col-sm-6 control-label-sm" })
                                @Html.TextBox("txtVlrUnitario", "", new { @class = "form-control numeric-places", @placeholder = "Vlr. Unitário", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Vlr. Unitário' é obrigatório" })
                            </div>
                            <div class="col-xs-6">
                                @Html.Label("Quantidade", new { @class = "col-sm-6 control-label-sm" })
                                @Html.TextBox("txtQuantidade", "", new { @class = "form-control integer-mask-place", @placeholder = "Quantidade",  @data_parsley_type = "integer", @data_parsley_required = "", @data_parsley_error_message = "O campo 'Quantidade' é obrigatório" })
                            </div>
                        </div>

                        <div class="row top5">
                            <div class="col-xs-6">
                                @Html.Label("Desconto %", new { @class = "col-sm-6 control-label-sm" })
                                @Html.TextBoxFor(model => model.valorDesconto, new { @class = "form-control numeric-places", @placeholder = "Desconto %",  @data_parsley_required = "", @data_parsley_error_message = "O campo 'Desconto %' é obrigatório" })
                            </div>

                            <div class="col-xs-6">
                                @Html.Label("Total", new { @class = "col-sm-6 control-label-sm" })
                                @Html.TextBoxFor(model => model.totalVenda, new { @class = "form-control numeric-places",  @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}







